			printf("\n------------------------\n");
			printf("\nCOMO JUGAR AL BLACKJACK:\n");
			printf("\n------------------------\n");

			//INSERTAR FICHERO (como_jugar_al_blackjack.txt)
			
			
			break;//FIN DE LA SEGUNDA OPCION
		case 3:
			printf("\n------------------------\n");
			printf("\n\tREGLAS:\n");
			printf("\n------------------------\n");

			//INSERTAR FICHERO (reglas.txt)

			break;//FIN DE LA TERCERA OPCION
		case 4:
			
			//INSERTAR NOMBRE Y CONTRASEÑA E INFORMA SOBRE MANOS GANADAS, MANOS PERDIDAS, FICHAS NETAS, FICHAS GANADAS, FICHAS PERDIDAS.
			
			break;//FIN DE LA CUARTA OPCION
		case 5:
			return 0;
			break;
		}
	} while (opc != 5);
	// CIERRE DEL PROGRAMA
}
int menu_principal(void)
{
	int opcion;
	do
	{
		printf("1. Jugar al Blackjack.\n");
		printf("2. Como jugar.\n");
		printf("3. Reglas.\n");
		printf("4. Informacion jugadores.\n");
		printf("5. Cerrar el juego.\n");
		printf("Seleccione opción:");
		scanf_s("%d", &opcion);
		if (opcion < 1 || opcion>5)
			printf("\nOpción inexistente.\n\n");
	} while (opcion < 1 || opcion>5);
	return opcion;
}
void configura(void)
{
	setlocale(LC_ALL, "spanish");
}
